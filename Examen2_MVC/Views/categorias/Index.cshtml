@model IEnumerable<Examen2_MVC.Models.categoria>

@{
    Layout = null;
}
<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="box-header">
                <h4>Marca</h4>
            </div>
            <div class="box-body">
                @Ajax.ActionLink("Crear Categoria", "Create", new AjaxOptions {
                HttpMethod="GET",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "contenido_modal",
                OnSuccess = "abrirModal('#modal_crear_categoria')",
                })
                <div id="listar_categoria">
                    @{Html.RenderPartial("List", Model);}
                </div>
            </div>

        </div>
    </div>
</div>
<div id="contenido_modal"></div>